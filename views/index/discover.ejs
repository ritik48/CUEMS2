            color: white;
        }

        .category-search {
            width: 100%;

            gap: 20px;
        }

        .category-search input {
            width: 65%;
            outline: none;
            border: none;
            background-color: #2b2b2c95;
            box-shadow: 0px 0px 7px #1c1c24;
            color: white;

            font-size: 1.3rem;
            padding: 0.55em 1.4em;
            border-radius: 0.15em;
        }

        .event-search:focus-within {
            box-shadow: 0px 0px 7px #24a3378d;
        }

        .category-search input::placeholder {
            color: rgb(172, 171, 171);
            font-weight: 500;
        }

        .search {
            color: white;
            font-weight: 600;
            /* padding-block: 0.6em; */
