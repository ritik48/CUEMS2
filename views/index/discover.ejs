        .category-list {
            width: 100%;
            gap: 5%;
        }

        .event-category {
            box-shadow: 0px 0px 8px 3px #1c1c24;

            height: 90px;
            width: 90px;

            border-radius: 25%;
            cursor: pointer;
            transition: 0.15s ease-in-out;
        }

        .event-category:hover {
            /* background-color: rgb(106, 86, 30); */
            /* background-color: rgb(88, 1, 88); */
            background-color: rgb(88, 78, 18);
