        <section class="event-section" id="event-sec">
            <div class="container">
                <h2>Events going on</h2>
                <div class="events-list-wrapper">
                    <% for(let event of events) { %>
                        <a class="event-item flex" href="/events/<%= event.id %>">
                            <img src="uploads/<%= event.image %>" alt="" class="event-banner">
                            <div class="event-content flex flex-column">
                                <div class="event-title">
                                    <%= event.name %>
                                </div>
                                <div class="event-tags flex flex-ai">
                                    <% for(let tag of event.tags) { %>
                                        <div class="event-tag">
                                            <%= tag %>
                                        </div>
                                        <% } %>
                                </div>
                                <div class="event-date">
                                    <%= event.getDate() %>
                                </div>
                            </div>
                        </a>
                        <% } %>
                </div>
