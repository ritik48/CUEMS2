        }

        /* ------------- event list section ---------------  */
        .event-section .container {
            max-width: 1100px;
        }
        .event-section h2 {
            color: white;
            margin-bottom: 20px;
        }

        .events-list-wrapper {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 50px;
        }

        .event-content {
            gap: 20px;
        }

        .event-item {
            font-size: 1rem;
            box-shadow: 0px 0px 8px 3px #1c1c24;
            padding: 15px;
            gap: 20px;

            border-radius: 20px;
        }

        .event-item:hover {
            background-color: rgb(57, 52, 22);
        }

        .event-banner {
            display: block;
            width: 130px;
            height: 130px;

            border-radius: 10%;
        }

        .event-title {
            font-size: 1.8em;
            font-weight: 600;
            letter-spacing: 0.015em;

            color: white;
        }

        .event-tags {
            flex-wrap: wrap;
            gap: 15px;
        }

        .event-tag {
            color: white;
            background-color: rgb(11, 190, 68);

            padding: 0.25em 0.75em;
            letter-spacing: 0.02em;
            border-radius: 10px;
        }

        .event-date {
            color: white;
            font-size: 1.1em;
            letter-spacing: 0.08em;
        }

        .alert {
            width: 30%;
            margin: 0 auto;
            margin-top: -30px;
            margin-bottom: 15px;
            
        }

        @media screen and (max-width:820px) {
            .event-category p {
