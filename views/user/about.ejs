<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link
        href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500&family=Rosario:wght@400;600;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/base.css">
    <style>
        .container {
            justify-content: center;
            gap: 40px;
      
            /* border: 1px solid red; */

            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }
        img {
            width: 160px;
        }
        .left-container {
            /* border: 1px solid white; */
            padding-right: 30px;
            gap: 20px;

            border-right: 1px solid rgb(138, 138, 138);
            justify-content: center;
            /* width: 100px; */
        }

        .user-name {
            font-size: 1.5rem;
            color: white;
        }
        .user-designation {
            font-size: 1.1rem;
            color: rgb(207, 207, 207);
            text-align: center;
        }
        .right-info {
            gap: 20px;
        }
        .info-items {
            gap: 5px;
        }

        .key {
            color: rgb(198, 198, 198);
            font-size: 1.3rem;
        }
        .value {
            color: white;
            font-size: 1.3rem;
        }

        /* ====================== */

        .right-container {
            width: 100%;


            gap: 30px;
        }
        .events-list-wrapper {
            width: 100%;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
            gap: 25px;

            
        }

        .event-content {
            gap: 10px;
        }

        .event-item {
            font-size: 0.7rem;
            box-shadow: 0px 0px 8px 3px #1c1c24;
            padding: 10px;
            gap: 20px;

            border-radius: 20px;
        }

        .event-item:hover {
            background-color: rgb(57, 52, 22);
        }

        .event-banner {
            display: block;
            width: 60px;
            height: 60px;

            border-radius: 10%;
        }

        .event-title {
            font-size: 1.8em;
            font-weight: 600;
            letter-spacing: 0.015em;

            color: white;
        }

        .event-tags {
            flex-wrap: wrap;
            gap: 15px;
        }

        .event-tag {
            color: white;
            background-color: rgb(11, 190, 68);

            padding: 0.25em 0.75em;
            letter-spacing: 0.02em;
            border-radius: 10px;
        }

        .event-date {
            color: white;
            font-size: 1.1em;
            letter-spacing: 0.08em;
        }

    

        h3 {
            color: rgb(192, 192, 192);
            margin-bottom: 15px;
        }
        
    </style>
    
</head>
<body>
    <%- include('../partials/nav.ejs') %>
    <%- include('../partials/flash')  %>
    
    <section class="about-container">
        <div class="container flex">
            <div class="left-container flex flex-column flex-ai">
                <img src="/images/user.png" alt="">
                <div class="user-info flex flex-column flex-ai">
                    <div class="user-name">
                        <%= currentUser.name %>
                    </div>
                    <div class="user-designation">
                        Full stack web developer
                    </div>
                </div>
            </div>
            <div class="right-container flex flex-column">
                    <div class="right-info flex flex-column">
                        <div class="flex flex-column info-items">
                            <span class="key">Email</span>
                            <span class="value"><%= currentUser.email %></span>
                        </div>
    
                        <div class="flex flex-column info-items">
                            <span class="key">UID</span>
                            <span class="value"><%= currentUser.username %></span>
                        </div>
    
                        <div class="flex flex-column info-items">
                            <span class="key">Phone</span>
                            <span class="value"><%= currentUser.number %></span>
                        </div>
                    </div>

                    <div class="right-history">
                        <h3>Participated in: </h2>
                    
                        <div class="events-list-wrapper">
                            <% for(let event of events) { %>
                                <a class="event-item flex" href="/events/<%= event.id %>">
                                    <img src="uploads/<%= event.image %>" alt="" class="event-banner">
                                    <div class="event-content flex flex-column">
                                        <div class="event-title">
                                            <%= event.name.substring(0, 11)%><% if(event.name.substring(0, 11) !== event.name) { %>...
                                            <% } %>
                                        </div>
                                        
                                        <div class="event-date">
                                            <%= event.getDate() %>
                                        </div>
                                    </div>
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/footer.ejs') %>
    <script src="https://unpkg.com/typed.js@2.0.15/dist/typed.umd.js"></script>
    <script src="/javascripts/animation.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
  
</body>
</html>